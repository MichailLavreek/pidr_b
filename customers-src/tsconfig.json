{
  "compilerOptions": {
    "baseUrl": ".",

    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "target": "es5",
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "types": ["jasmine", "node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "es2016", "dom", "es6", "es7", "es2017" ],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true
  }
}
