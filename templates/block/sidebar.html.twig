
<div class="left-side">
    <div class="sidebar" id="js_nav-sidebar">

        <div class="lang">
            <ul class="lang__list">
                {% for language in languages %}
                    <li class="lang__item">
                        <a href="{{ url(app.request.attributes.get('_route'), {'_locale': language.getIso2()}) }}"
                           class="lang__link{% if language.getIso2() == currentLanguage.getIso2() %} lang__link--active{% endif %}">
                            {{ language.getName() }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>

        <div class="logo">
            <a href="/">
                <img src="/img/logo.png" alt="Підрахуй. У нас купуваты вигідніше">
            </a>
        </div>

        <div class="nav">
            <ul class="nav__list">
                {% for structure in structures %}
                    <li class="nav__item{% if structure.children is not empty %} nav__item--submenu{% endif %}">
                        <a href="{{ path('structure', {'alias': structure.alias }) }}" class="nav__link">
                            {{ structure.lang.name }}
                        </a>

                        {% if structure.children is not empty %}
                            <ul class="nav__list--submenu">
                                {% for child in structure.children %}
                                    <li class="nav__item--submenu">
                                        <a href="{{ path('structure', {'alias': child.alias }) }}" class="nav__link--submenu">
                                            {{ child.lang.name }}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}

                    </li>
                {% endfor %}
            </ul>
        </div>

        <div class="contacts">
            <div class="contacts__title">
                ми на зв’язку:
            </div>
            <div class="contacts__items contacts__items--phone">
                <div class="contacts__icon icon-phone-receiver"></div>
                <a href="telto:#" class="contacts__item">(097)466-8228</a>
                <a href="telto:#" class="contacts__item">(066)852-1355</a>
                <a href="telto:#" class="contacts__item">(093)909-3888</a>
            </div>
            <div class="contacts__items contacts__items--email">
                <div class="contacts__icon icon-close-envelope"></div>
                <a href="mailto:#" class="contacts__item">info@pidrahui.com.ua</a>
            </div>
        </div>

    </div>
</div>